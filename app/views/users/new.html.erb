<% if @user.errors.any? %>
  
    <h4 class="alert alert-error">The following <%= pluralize(@user.errors.count, "error") %> prevented us from creating your account. Check them out, make corrections, then try again!</h4>
    																													     
    <ul class="error-text">																												     
      <% @user.errors.full_messages.each do |m| %>																	     
      <li><%= m %></li>																								     
    
    <% end %>	
    </ul>																											     
    																													     
  <% end %>

<div class="row">
  <div class="span4 well">
  <legend>Sign up for Roomie!</legend>

  <fieldset>
  <%= simple_form_for(@user) do |f| %>

  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :zip %>
  
  <%= f.button :submit, "Create my account" %>
  </fieldset>
<% end %>

  Already have an account? <%= link_to "Sign in", signin_path %>. 
</div>
</div>